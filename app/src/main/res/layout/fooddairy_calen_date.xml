<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FoodDairy.calen.FoodDairy_Calen_date">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/nutritionin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#536E33"
            android:drawableTop="@drawable/fooddairy_nutrition"
            android:text="查看攝取營養"
            android:textColor="#FFFFFF"
            android:textSize="45px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_calen_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@drawable/fooddairy_titlebg"
            android:backgroundTint="#536E33"
            android:elevation="20dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="顯示日期"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_calen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BDBDBD" />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_calen"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>